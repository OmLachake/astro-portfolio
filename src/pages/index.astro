<style lang="scss">
    .svg-container {
        width: 100%;
        position: absolute;
        height: 90vh;
        bottom: 0;
        left: 0;
        z-index: 0;

        @media (max-height: 500px) {
            height: 50vh;
        }

        @media (min-width: 800px) and (max-width: 1100px) {
            overflow: clip;
            bottom: 0;
            left: 0;
            height: 80vh;
        }

        @media (max-width: 800px) {
            height: 50vh;
            bottom: 0;
            left: 0;
            overflow: clip;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    }

    .wave {
        transition: fill 0.2s ease-in-out;
    }

    .main-svg {
        width: 100%;
        height: auto;
        display: block;
        z-index: 0;
        @media (min-width: 800px) and (max-width: 1100px) {
            height: 75vw;
            scale: 1;
        }

        @media (min-height: 1080px) {
            height: 75vw;
            scale: 3;
        }
        @media (max-width: 800px) {
            height: 45vw;
            scale: 3;
        }
    }

    .next-section {
        min-height: 100svh;
        background-color: var(--backgroundColor);
        color: #888;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero {
        display: flex;
        flex-direction: column;
        gap: 4rem;
        align-items: center;
        justify-content: flex-start;
        padding-top: calc(10rem);
        min-height: 100svh;
        position: relative;
        @media (max-height: 1080px) {
            height: 100vh;
        }

        @media (min-height: 1080px) and (max-height: 1600px) {
            height: 100vh;
        }

        @media (max-width: 800px) {
            max-height: 95vh;
            gap: 2rem;
        }
    }
    .hero-container {
        z-index: 2;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 3rem;

        @media (max-width: 800px) {
            flex-direction: column;
            gap: 1rem;
        }
    }
    .hero .title {
        font-family: 'Soria', serif;
        font-size: 5.5vw;
        font-weight: 600;
        width: max-content;
        height: fit-content;
        margin: 0;
        line-height: 1;

        @media (max-width: 800px) {
            font-size: 1.8rem;
            text-align: center;
            width: 100%;
        }
    }

    .hero .left {
        text-align: right;

        @media (max-width: 800px) {
            order: 1;
        }
    }

    .hero .right {
        text-align: left;

        @media (max-width: 800px) {
            order: 2;
        }
    }
    .hero-sub-title {
        font-family: 'Urbanist', serif;
        font-size: 2vw;
        font-weight: 300;
        width: 50%;
        text-align: center;
        line-height: 1.5;

        @media (max-width: 800px) {
            width: 80%;
            font-size: 1rem;
        }
    }

    .hero-sub-title span {
        border-radius: 0.4rem;
        padding: 0.3rem 0.5rem;
        background-color: var(--backgroundDarkColor);
    }

    .hero-ui {
        width: 7rem;
        height: 7rem;
        margin: 0;
        position: relative;
        border-radius: 50%;
        border: 2px solid var(--foregroundColor);
        padding: 3.5rem;
        animation: rotate 12s linear infinite;

        @media (max-width: 800px) {
            order: 3;
            width: 3rem;
            height: 3rem;
            padding: 2rem;
        }

        &:after,
        &:before {
            content: '';
            position: absolute;
            background: var(--foregroundColor);
            border-radius: 50%;
            top: 0%;
            left: 17.5%;
            height: 1.2rem;
            width: 1.2rem;

            @media (max-width: 800px) {
                left: 12.5%;
                height: 0.8rem;
                width: 0.8rem;
            }
        }

        &:before {
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            height: 3rem;
            width: 3rem;
            background: var(--accentColor);

            @media (max-width: 800px) {
                height: 1.5rem;
                width: 1.5rem;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
        }
    }

    .hero-bg-effect {
        position: absolute;
        inset: 0;
        z-index: 0; /* Behind text (z-index 2), in front of waves (z-index 0) */
        pointer-events: none; /* Let clicks pass through to buttons/text */
        overflow: hidden;
        /* 1. The Technical Grid Pattern */
        background-size: 40px 40px;
        background-image:
            linear-gradient(
                to right,
                color-mix(in srgb, var(--foregroundColor) 5%, transparent) 1px,
                transparent 1px
            ),
            linear-gradient(
                to bottom,
                color-mix(in srgb, var(--foregroundColor) 5%, transparent) 1px,
                transparent 1px
            );
        mask-image: linear-gradient(
            to bottom,
            black 60%,
            transparent 100%
        ); /* Fade out grid near waves */

        /* 2. The Glowing Orb */
        &::before {
            content: '';
            position: absolute;
            width: 25vw;
            height: 25vw;
            min-width: 250px;
            min-height: 250px;

            background: radial-gradient(
                circle,
                color-mix(in srgb, var(--accentColor) 25%, transparent) 0%,
                transparent 70%
            );

            filter: blur(30px);

            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
            left: var(--mouse-x, 50%);
            top: var(--mouse-y, 50%);
            transform: translate(-50%, -50%);
            will-change: transform, border-radius;

            animation: blob-spin 30s linear infinite alternate;

            @media (max-width: 768px) {
                width: 80vw;
                height: 80vw;
            }
        }
    }

    /* The Morphing Animation */
    @keyframes blob-spin {
        0% {
            transform: translate(-50%, -50%) rotate(0deg) scale(1);
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }
        33% {
            transform: translate(-50%, -50%) rotate(120deg) scale(1.1);
            border-radius: 50% 20% 50% 50% / 40% 40% 60% 60%;
        }
        66% {
            transform: translate(-50%, -50%) rotate(240deg) scale(0.9);
            border-radius: 80% 50% 30% 50% / 50% 80% 20% 40%;
        }
        100% {
            transform: translate(-50%, -50%) rotate(360deg) scale(1);
            border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        }
    }
    @keyframes rotate {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }
</style>
<script>
    import '../scripts/hero.js';
</script>
