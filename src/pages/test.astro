    <section class="next-section">
        <h2>Next Section (Keep Scrolling)</h2>
    </section>

    <style lang="scss">
        .svg-container {
            width: 100%;
            position: absolute;
            height: 90vh;
            bottom: 0;
            left: 0;
            z-index: 0;
        }

        .wave {
            transition: fill 0.2s ease-in-out;
        }

        .main-svg {
            width: 100%;
            height: auto;
            display: block;
            z-index: 0;
        }

        .next-section {
            height: 100vh;
            background-color: var(--backgroundColor);
            color: #888;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .hero {
            display: flex;
            flex-direction: column;
            gap: 4rem;
            align-items: center;
            justify-content: flex-start;
            padding-top: calc(12rem);
            height: 100vh;
            position: relative;

            @media (max-height: 1080px) {
                height: 100vh;
            }

            @media (min-height: 1080px) and (max-height: 1600px) {
                height: 70vh;
            }

            @media (max-width: 800px) {
                gap: 2rem;
            }
        }
        .hero-container {
            z-index: 2;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 3rem;
        }
        .hero .title {
            font-family: 'Soria', serif;
            font-size: 5.5vw;
            font-weight: 600;
            width: max-content;
            height: fit-content;
            margin: 0;
            line-height: 1;
        }

        .hero .left {
            text-align: right;
        }

        .hero .right {
            text-align: left;
        }
        .hero-sub-title {
            font-family: 'Urbanist', serif;
            font-size: 2vw;
            font-weight: 300;
            width: 50%;
            text-align: center;
            line-height: 1.5;
        }

        .hero-sub-title span {
            border-radius: 0.4rem;
            padding: 0.3rem 0.5rem;
            background-color: var(--backgroundDarkColor);
        }

        .hero-ui {
            width: 7rem;
            height: 7rem;
            margin: 0;
            position: relative;
            border-radius: 50%;
            border: 2px solid var(--foregroundColor);
            padding: 3.5rem;
            animation: rotate 12s linear infinite;

            &:after,
            &:before {
                content: '';
                position: absolute;
                background: var(--foregroundColor);
                border-radius: 50%;
                top: 0%;
                left: 17.5%;
                height: 1.2rem;
                width: 1.2rem;
            }

            &:before {
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                height: 3rem;
                width: 3rem;
                background: var(--accentColor);
            }
        }

        @media (max-width: 768px) {
            .hero-container {
                flex-direction: column;
                gap: 1rem;
            }

            .hero .title {
                font-size: 1.8rem;
                text-align: center;
                width: 100%;
            }

            .svg-container {
                overflow: hidden;
                bottom: 0;
                height: 80vh;
            }

            .main-svg {
                height: 100vh;
                scale: 3;
            }

            .hero {
                gap: 2rem;
            }
            .hero-sub-title {
                width: 80%;
                font-size: 1rem;
            }
            .hero-ui {
                width: 3rem;
                height: 3rem;
                padding: 2rem;

                &:after,
                &:before {
                    left: 12.5%;
                    height: 0.8rem;
                    width: 0.8rem;
                }

                &:before {
                    height: 1.5rem;
                    width: 1.5rem;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                }
            }
            .hero-ui {
                order: 3;
            }

            .hero .left {
                order: 1;
            }
            .hero .right {
                order: 2;
            }
        }

        .hero-bg-effect {
            position: absolute;
            inset: 0;
            z-index: 0; /* Behind text (z-index 2), in front of waves (z-index 0) */
            pointer-events: none; /* Let clicks pass through to buttons/text */

            /* 1. The Technical Grid Pattern */
            background-size: 40px 40px;
            background-image:
                linear-gradient(
                    to right,
                    color-mix(in srgb, var(--foregroundColor) 5%, transparent)
                        1px,
                    transparent 1px
                ),
                linear-gradient(
                    to bottom,
                    color-mix(in srgb, var(--foregroundColor) 5%, transparent)
                        1px,
                    transparent 1px
                );
            mask-image: linear-gradient(
                to bottom,
                black 60%,
                transparent 100%
            ); /* Fade out grid near waves */

            /* 2. The Glowing Orb */
            &::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 30vw;
                height: 30vw;
                background: radial-gradient(
                    circle,
                    color-mix(in srgb, var(--accentColor) 25%, transparent) 0%,
                    transparent 70%
                );
                border-radius: 50%;

                /* Centering the pivot point so JS coordinates are accurate */
                transform: translate(-50%, -50%);

                /* Performance optimization */
                will-change: transform, opacity;

                /* Default position (center) */
                left: var(--mouse-x, 50%);
                top: var(--mouse-y, 50%);

                /* The "Idle" Animation */
                animation: floatPulse 1s ease-in-out infinite;

                @media (max-width: 768px) {
                    width: 80vw;
                    height: 80vw;
                }
            }
        }

        /* Make the glow breathe and drift slightly when idle */
        @keyframes floatPulse {
            0%,
            100% {
                transform: translate(-50%, -50%) scale(1);
                opacity: 0.8;
            }
            50% {
                transform: translate(-45%, -55%) scale(1.1);
                opacity: 0.5;
            }
        }

        @keyframes rotate {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }
    </style>

    <script>
        import '../scripts/hero.js';
    </script>
</BaseLayout>
